<h1>MY TASKS</h1>




<ul>
  <% @tasks.each do |task| %>
  <div class="d-block mt-3">
    <% if task.completed == true %>
      <i class="fa fa-check-square-o d-inline p-2"></i>
    <% else %>
      <i class="fa fa-square-o d-inline p-2"></i>
    <% end %>
    <li class="task d-inline"><%= link_to task.title, task_path(task) %></li>

    <%= link_to "Edit task", edit_task_path(task), :class => 'btn btn-primary' %>
    <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }, :class => 'btn btn-danger'%>
  <% end %>
  </div>
</ul>

<%= link_to "Create new task", new_task_path %>
